@{
    ViewData["Title"] = "Home Page";
}
@model User

<h1>Register to this Cool Site!</h1>
<a href="/signin">Login</a>

<form asp-action="Register" method="POST" class="col-5 mx-auto">
    <div class="form-group">
        <span asp-validation-for="FirstName"></span><br>
        <label asp-for="FirstName">First Name:</label>
        <input asp-for="FirstName" class="form-control">
    </div>
    <div class="form-group">
        <span asp-validation-for="LastName"></span><br>
        <label asp-for="LastName">Last Name:</label>
        <input asp-for="LastName" class="form-control">
    </div>
    <div class="form-group">
        <span asp-validation-for="Email"></span><br>
        <label asp-for="Email">Email Address:</label>
        <input asp-for="Email" class="form-control">
    </div>
    <div class="form-group">
        <span asp-validation-for="Password"></span><br>
        <label asp-for="Password">Password:</label>
        <input type="password" asp-for="Password" class="form-control">
    </div>
    <div class="form-group">
        <span asp-validation-for="ConfirmPassword"></span><br>
        <label asp-for="ConfirmPassword">Confirm Password:</label>
        <input asp-for="ConfirmPassword" class="form-control">
    </div>
    <div>
        <input type="submit" value="Register" class="btn btn-lg btn-primary">
    </div>
</form>

